  },
  "scripts": {
    "_comment": "The first start and startLocal targets are very hacky!!",
    "start": "cp src/index.nonlocal.tsx src/index.tsx && react-scripts start",
    "startLocal": "cp src/index.local.tsx src/index.tsx && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "serve": "yarn run tsc --project tsconfig-server.json && node -r esm build-server/server.js",
    "clean": "yarn run prettier -w src *.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
